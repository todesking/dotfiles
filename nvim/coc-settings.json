{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "pyls": {
      "command": "pyls",
      "rootPatterns": ["PipFile", "requirements.txt", "setup.py"],
      "filetypes": ["python"]
    }
  },
  "suggest.floatEnable": true,
  "suggest.enablePreview": true,
  "suggest.maxPreviewWidth": 120,
  "diagnostic.refreshAfterSave": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "    !!! ",
  "diagnostic.virtualTextLineSeparator": " ",
  "diagnostic.messageTarget": "float",
  "diagnostic.maxWindowHeight": 50,
  "diagnostic.maxWindowWidth": 170,
  "signature.maxWindowHeight": 20,
  // "diagnostic.displayByAle": true,
  "codeLens.enable": true,
  "coc.preferences.extensionUpdateCheck": "never",
}
