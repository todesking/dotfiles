{
  "languageserver": {
    "clangd": {
      "command": "/usr/local/Cellar/llvm/10.0.0_3/bin/clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "pyls": {
      "command": "pyls",
      "rootPatterns": ["PipFile", "requirements.txt", "setup.py", ".python-version"],
      "filetypes": ["python"]
    }
  },
  "coc.preferences.rootPatterns": ["build.sbt", "README.md", ".git"],
  "coc.preferences.extensionUpdateCheck": "never",

  "suggest.floatEnable": true,
  "suggest.enablePreview": true,
  "suggest.maxPreviewWidth": 120,

  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "    !!! ",
  "diagnostic.virtualTextLineSeparator": " ",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.messageTarget": "float",
  "diagnostic.maxWindowHeight": 50,
  "diagnostic.maxWindowWidth": 170,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.refreshOnInsertMode": false,

  "signature.maxWindowHeight": 20,

  "javascript.validate.enable": false,
  "javascript.showUnused": false,

  "typescript.validate.enable": true,
  "typescript.showUnused": false,
  "typescript.referencesCodeLens.enable": false,

  "tsserver.log": "verbose",

  "eslint.quiet": true
}
