autodetach on
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
defscrollback 10000
startup_message off
vbell off
#hardstatus alwayslastline "%H[%n] %w"
#hardstatus      string "%{.Wb}.: %-w%{.RW}%n %t%{-}%+w :. %=[%Y-%m-%d %02c]"
hardstatus alwayslastline "%`%-w%{=b bw}%n %t%{-}%+w"
bind n screen
bind k prev
bind j next
bind l windowlist
bind \\ quit
bind ^l eval "clear" "scrollback 0" "scrollback 10000"
multiuser on
term xterm-256color
bell_msg "Bell in window %"
